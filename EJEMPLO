# ejemplo_abstraccion_1.py

from abc import ABC, abstractmethod

class Animal(ABC):
    @abstractmethod
    def hacer_sonido(self):
        pass

class Perro(Animal):
    def hacer_sonido(self):
        return "Guau"

class Gato(Animal):
    def hacer_sonido(self):
        return "Miau"

# Uso
perro = Perro()
gato = Gato()
print(perro.hacer_sonido())  # Output: Guau
print(gato.hacer_sonido())   # Output: Miau
